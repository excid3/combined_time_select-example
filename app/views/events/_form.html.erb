<%= form_for(event) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :starts_at %>
    <%= f.date_select :starts_at %>

    <%= f.time_select :starts_at,
      :combined => true,
      :default => Time.now.change(:hour => 11, :min => 30),
      :minute_interval => 15,
      :time_separator => "",
      :start_hour => 10,
      :start_minute => 30,
      :end_hour => 14,
      :end_minute => 30
    %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
